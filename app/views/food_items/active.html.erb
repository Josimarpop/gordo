<ul class="food_items">
  <% if @food_items.length > 0 %>
    Select your food item:
    <% @food_items.each do |food_item| %>
      <li>
        <%= link_to(image_tag(food_item.picture_url, height: '64', width: '64'), food_item) %>
        <%= link_to food_item.title, food_item %>
      </li>
    <% end %>
  <% else %>
    Gordo is not available right now for orders. Please try again later.
  <% end %>
</ul>